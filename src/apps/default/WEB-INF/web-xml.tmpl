  <servlet-mapping>
    <servlet-name>org.snipsnap.net.admin.ConfigureServlet</servlet-name>
    <url-pattern>/admin/configure</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>org.snipsnap.net.admin.ThemeImageServlet</servlet-name>
